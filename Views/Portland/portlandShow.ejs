<div id="navDiv">
    <%- include('../header.ejs') %>
</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Name</title>
</head>
<body>
    <h1><%= singlePortland.restaurant %></h1>
    <div class="blurb">
        <p><%= singlePortland.review %></p>
    </div>
    <div class="info">
        <p>Cuisine: <%= singlePortland.cuisine %></p>
        <p>Price range: <%= singlePortland.priceRange %></p>
        <a href=<%= singlePortland.webLink %>>Visit restaurant website</a> 
    </div>
    <br>
    <div class="menu-items">
        <h2>Featured Menu Items:</h2>
        <br>
        <h3><%= singlePortland.menuItemOne %></h3>
        <img src=<%= singlePortland.imgOne %> alt="food photo1">
        <br>
        <h3><%= singlePortland.menuItemTwo %></h3>
        <img src=<%= singlePortland.imgTwo %> alt="food photo2">
        <br>
        <h3><%= singlePortland.menuItemThree %></h3>
        <img src=<%= singlePortland.imgThree %> alt="food photo3">
        <br>
    </div>
    <a href=<%= singlePortland._id %>>Delete this restaurant</a>
</body>
</html>